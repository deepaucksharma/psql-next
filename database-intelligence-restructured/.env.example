# Database Intelligence Collector Environment Variables
# Copy this file to .env and fill in your actual values

# ===== SERVICE CONFIGURATION =====
SERVICE_NAME=database-intelligence-collector
SERVICE_VERSION=2.0.0
DEPLOYMENT_ENVIRONMENT=production

# ===== DATABASE CONNECTIONS =====
# PostgreSQL
DB_POSTGRES_HOST=localhost
DB_POSTGRES_PORT=5432
DB_POSTGRES_USER=postgres
DB_POSTGRES_PASSWORD=postgres
DB_POSTGRES_DATABASE=postgres

# MySQL
DB_MYSQL_HOST=localhost
DB_MYSQL_PORT=3306
DB_MYSQL_USER=root
DB_MYSQL_PASSWORD=mysql
DB_MYSQL_DATABASE=mysql

# ===== NEW RELIC CONFIGURATION =====
# License key for OTLP data ingest
NEW_RELIC_LICENSE_KEY=your_license_key_here
NEW_RELIC_ACCOUNT_ID=your_account_id_here

# ===== OTLP CONFIGURATION =====
# OTLP endpoint (defaults to New Relic)
OTLP_ENDPOINT=https://otlp.nr-data.net:4317

# ===== RESOURCE LIMITS =====
MEMORY_LIMIT_MIB=512
MEMORY_SPIKE_LIMIT_MIB=128

# ===== DEBUG SETTINGS =====
DEBUG_VERBOSITY=normal  # basic, normal, detailed