# MySQL Root Configuration
MYSQL_ROOT_PASSWORD=rootpassword
MYSQL_DATABASE=testdb
MYSQL_USER=appuser
MYSQL_PASSWORD=apppassword
MYSQL_MONITOR_PASSWORD=otelmonitorpass

# New Relic Configuration (REQUIRED)
NEW_RELIC_API_KEY=your_new_relic_ingest_license_key_here
NEW_RELIC_ACCOUNT_ID=your_new_relic_account_id_here
NEW_RELIC_OTLP_ENDPOINT=otlp.nr-data.net:4317
# For EU datacenter, use: NEW_RELIC_OTLP_ENDPOINT=otlp.eu01.nr-data.net:4317

# Environment Settings
ENVIRONMENT=development
TEAM_NAME=database-team
SERVICE_NAME=mysql-monitoring
COST_CENTER=engineering

# Cloud Provider Settings
CLOUD_PROVIDER=docker
CLOUD_REGION=local

# Master Configuration Settings
DEPLOYMENT_MODE=advanced         # Options: minimal, standard, advanced, debug
ENABLE_SQL_INTELLIGENCE=true     # Enable comprehensive SQL intelligence queries
WAIT_PROFILE_ENABLED=true        # Enable wait profile analysis
ML_FEATURES_ENABLED=true         # Enable ML feature generation
BUSINESS_CONTEXT_ENABLED=true    # Enable business impact tracking
ANOMALY_DETECTION_ENABLED=true   # Enable anomaly detection
ADVISOR_ENGINE_ENABLED=true      # Enable performance advisory engine
CLUSTER_NAME=mysql-cluster       # MySQL cluster identifier

# Performance Settings
MYSQL_COLLECTION_INTERVAL=5s     # MySQL metrics collection interval
SQL_INTELLIGENCE_INTERVAL=5s     # SQL intelligence query interval
BATCH_SIZE=1000                  # Batch size for metric processing
MEMORY_LIMIT_PERCENT=80          # Memory limit percentage
SCRAPE_INTERVAL=10s              # Scrape interval for host metrics